                    <div class="fs-2 fw-bold webybtn mb-3">KOT</div>
                </div>
            </div>
        </div>

        <!-- Bootstrap Tabs -->
        <ul class="nav nav-tabss border-0 bg-white p-3 pt-2 pb-0 rounded-3">
            <li class="nav-item">
                <a class="nav-link active text-primary fs-5 fw-bold border-bottom border-primary" data-bs-toggle="tab"
                    href="#tabAll">All</a>
            </li>
            @foreach (var category in Model.menuCategories)
            {
                <li class="nav-item">
                    <a class="nav-link text-nav-color fs-5 fw-bold" data-bs-toggle="tab"
                        href="#tab@category.CategoryId">@category.CategoryName</a>
                </li>
            }
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-3 bg-white">
            <!-- All Tab -->
            <div class="tab-pane fade show active" id="tabAll">
                <div class="card border-success mb-3" style="max-width: 18rem;">
                    <div class="card-header bg-transparent border-success">All Categories</div>
                    <div class="card-body text-success">
                        <h5 class="card-title">All Items</h5>
                        <p class="card-text">Here are items from all categories.</p>
                    </div>
                    <div class="card-footer bg-transparent border-success">Footer</div>
                </div>
            </div>

            <!-- Dynamic Category Tabs -->
            @foreach (var category in Model.menuCategories)
            {
                <div class="tab-pane fade" id="tab@category.CategoryId">
                    <div class="card border-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header bg-transparent border-primary">@category.CategoryName</div>
                        <div class="card-body text-primary">
