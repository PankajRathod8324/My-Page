<div class="d-flex align-items-center mt-2 gap-2">
    <label class="me-2 mb-0 fw-semibold">Qty:</label>
    <div class="input-group flex-nowrap" style="width: 130px;">
        <button class="btn btn-outline-secondary qty-decrease" type="button" data-itemid="@item.Productid">−</button>
        <input type="text" class="form-control text-center qty-input" value="@item.Quantity" data-itemid="@item.Productid" readonly />
        <button class="btn btn-outline-secondary qty-increase" type="button" data-itemid="@item.Productid">+</button>
    </div>
</div>
document.addEventListener("DOMContentLoaded", function () {

    function updateItemTotal(itemId) {
        const qtyInput = document.querySelector(`.qty-input[data-itemid="${itemId}"]`);
        const quantity = parseInt(qtyInput.value);
        const price = parseFloat(document.querySelector(`.cart-item[data-productid="${itemId}"]`).dataset.price);

        const totalElement = document.querySelector(`.cart-item[data-productid="${itemId}"] .item-total`);
        if (totalElement) {
            totalElement.textContent = `₹${(quantity * price).toFixed(2)}`;
        }

        updateOrderSummary();
    }

    function updateOrderSummary() {
        let totalPrice = 0;
        let totalItems = 0;

        document.querySelectorAll(".qty-input").forEach(input => {
            const qty = parseInt(input.value);
            const itemId = input.getAttribute("data-itemid");
            const itemRow = document.querySelector(`.cart-item[data-productid="${itemId}"]`);
            const price = parseFloat(itemRow?.dataset.price || 0);

            if (!isNaN(qty)) {
                totalItems += qty;
                totalPrice += qty * price;
            }
        });

        document.querySelectorAll(".summary-item-count").forEach(el => el.textContent = `Items (${totalItems})`);
        document.querySelectorAll(".summary-total-price").forEach(el => el.textContent = `₹${totalPrice.toFixed(2)}`);
    }

    // Increase quantity
    document.querySelectorAll(".qty-increase").forEach(button => {
        button.addEventListener("click", function () {
            const itemId = this.getAttribute("data-itemid");
            const input = document.querySelector(`.qty-input[data-itemid="${itemId}"]`);
            let qty = parseInt(input.value) || 1;
            input.value = qty + 1;

            updateItemTotal(itemId);
        });
    });

    // Decrease quantity
    document.querySelectorAll(".qty-decrease").forEach(button => {
        button.addEventListener("click", function () {
            const itemId = this.getAttribute("data-itemid");
            const input = document.querySelector(`.qty-input[data-itemid="${itemId}"]`);
            let qty = parseInt(input.value) || 1;
            if (qty > 1) {
                input.value = qty - 1;
                updateItemTotal(itemId);
            }
        });
    });

    // Initial calculation on page load
    updateOrderSummary();
});
<div class="row align-items-center mb-4 cart-item m-2 p-2"
    data-productid="@item.Productid"
    data-price="@item.Price"
    style="background-color: rgb(245, 245, 245) !important;">
