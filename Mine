<script>
    document.addEventListener("DOMContentLoaded", function () {
        let tabs = document.querySelectorAll(".nav-link");

        tabs.forEach(tab => {
            tab.addEventListener("click", function () {
                // Activate Bootstrap tab
                let tabTrigger = new bootstrap.Tab(this);
                tabTrigger.show();

                // Update active tab styling
                tabs.forEach(t => {
                    t.classList.remove("text-primary", "border-bottom", "border-primary");
                    t.classList.add("text-nav-color");
                });

                this.classList.add("text-primary", "border-bottom", "border-primary");
                this.classList.remove("text-nav-color");
            });
        });
    });
</script>

