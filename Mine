const modifierIds = selectedmodifier.map(m => m.ModifierId);
const existingItemIndex = ItemDetailsArray.findIndex(item => item.ItemId === ItemIdTemp);

if (existingItemIndex !== -1) {
    // Merge and remove duplicates
    const existingModifiers = ItemDetailsArray[existingItemIndex].ModifierGroupIdForAdd || [];
    const mergedModifiers = [...new Set([...existingModifiers, ...modifierIds])];
    
    ItemDetailsArray[existingItemIndex].ModifierGroupIdForAdd = mergedModifiers;
} else {
    ItemDetailsArray.push({
        ItemId: ItemIdTemp,
        ModifierGroupIdForAdd: modifierIds
    });
}
