    <script>
        $(document).ready(function () {
            // Toggle icons on accordion click
            $(".d-flex.align-items-center").click(function () {
                let icon = $(this).find(".toggle-icon");

                // Reset all icons to right arrow
                $(".toggle-icon").removeClass("bi-arrow-down-circle").addClass("bi-arrow-right-circle");

                // If current section is opening, change icon to down arrow
                if (!$(this).next(".collapse").hasClass("show")) {
                    icon.removeClass("bi-arrow-right-circle").addClass("bi-arrow-down-circle");
                }
            });

            // Select only grey border cards
            $(".selectable").click(function () {
                $(".selectable").removeClass("selected"); // Remove green from all
                $(this).addClass("selected"); // Add green border to selected one
            });
        });
    </script>

