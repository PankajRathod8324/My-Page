<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toggle Card with Bootstrap</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        .selected {
            border-color: green !important;
        }
    </style>
</head>
<body class="p-4">

    <div class="accordion" id="accordionExample">
        <!-- Card 1 -->
        <div class="card border-secondary mb-3" data-border="border-secondary">
            <div class="card-header d-flex align-items-center justify-content-between bg-light" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                <div class="d-flex align-items-center">
                    <i class="bi bi-arrow-right-circle me-2 fs-5 toggle-icon"></i>
                    <h5 class="mb-0">Ground Floor</h5>
                </div>
            </div>
            <div id="collapseOne" class="collapse" data-bs-parent="#accordionExample">
                <div class="card-body">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                </div>
            </div>
        </div>

        <!-- Card 2 (With Blue Border & Shade) -->
        <div class="card border-primary mb-3 bg-primary bg-opacity-10" data-border="border-primary">
            <div class="card-header d-flex align-items-center justify-content-between bg-light" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                <div class="d-flex align-items-center">
                    <i class="bi bi-arrow-right-circle me-2 fs-5 toggle-icon"></i>
                    <h5 class="mb-0">First Floor</h5>
                </div>
            </div>
            <div id="collapseTwo" class="collapse" data-bs-parent="#accordionExample">
                <div class="card-body">
                    Additional information about the first floor.
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $(".card-header").click(function () {
                let icon = $(this).find(".toggle-icon");
                let card = $(this).closest(".card");

                // Toggle icon class
                $(".toggle-icon").removeClass("bi-arrow-down-circle").addClass("bi-arrow-right-circle");
                if (!$(this).next(".collapse").hasClass("show")) {
                    icon.removeClass("bi-arrow-right-circle").addClass("bi-arrow-down-circle");
                }

                // Reset all card borders
                $(".card").each(function () {
                    $(this).removeClass("selected").addClass($(this).attr("data-border"));
                });

                // Change selected card border to green
                card.removeClass($(this).attr("data-border")).addClass("selected");
            });
        });
    </script>

</body>
</html>
