@model DAL.ViewModel.MenuCategoryVM

@{
    Layout = "_LayoutOrder";
    ViewData["Title"] = "Table View";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza Shop</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body style="background-color: rgb(245,245,245);">
    <div style="padding-top: 100px; padding-left: 50px; padding-right: 50px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="fs-2 fw-bold webybtn mb-3">KOT</div>
                </div>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs border-0 bg-white p-3 pt-2 pb-0 rounded-3" id="categoryTabs">
            @foreach (var category in Model.menuCategories.Select((value, index) => new { value, index }))
            {
                <li class="nav-item">
                    <a class="nav-link @(category.index == 0 ? "active text-primary border-bottom border-primary" : "text-nav-color")" 
                        data-bs-toggle="tab"
                        href="#tab@category.value.CategoryId">@category.value.CategoryName</a>
                </li>
            }
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-3 bg-white" id="categoryTabContent">
            @foreach (var category in Model.menuCategories.Select((value, index) => new { value, index }))
            {
                <div class="tab-pane fade @(category.index == 0 ? "show active" : "")" id="tab@category.value.CategoryId">
                    <div class="card border-primary mb-3" style="max-width: 18rem;">
                        <div class="card-header bg-transparent border-primary">@category.value.CategoryName</div>
                        <div class="card-body text-primary">
                            <h5 class="card-title">@category.value.CategoryName</h5>
                            <p class="card-text">Items for @category.value.CategoryName category.</p>
                        </div>
                        <div class="card-footer bg-transparent border-primary">Footer</div>
                    </div>
                </div>
            }
        </div>

    </div>
</body>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".nav-link").forEach(tab => {
            tab.addEventListener("click", function () {
                // Remove active styles from all tabs
                document.querySelectorAll(".nav-link").forEach(t => {
                    t.classList.remove("text-primary", "border-bottom", "border-primary");
                    t.classList.add("text-nav-color");
                });

                // Add active styles to selected tab
                this.classList.add("text-primary", "border-bottom", "border-primary");
                this.classList.remove("text-nav-color");
            });
        });
    });
</script>

</html>
