[Required(ErrorMessage = "Price is required.")]
[Range(0.01, 999999999.99, ErrorMessage = "Price must be greater than 0 and less than 999,999,999.99.")]
[RegularExpression(@"^\d+(\.\d{1,2})?$", ErrorMessage = "Price can have up to two decimal places only.")]
public decimal Price { get; set; }
<input asp-for="Price" class="form-control" type="number"
       step="0.01" min="0.01" max="999999999.99" required />
<span asp-validation-for="Price" class="text-danger"></span>
