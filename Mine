<style>
    .owl-carousel .item {
        padding: 15px;
        text-align: center;
    }

    .owl-carousel img {
        width: 100%;
        height: 250px; /* fixed height */
        object-fit: cover; /* crops evenly to fit */
        border-radius: 10px;
    }

    .owl-carousel h4 {
        margin-top: 10px;
        font-size: 1.25rem;
    }

    .owl-carousel p {
        font-size: 1rem;
        color: #555;
    }

    .owl-carousel .btn {
        margin-top: 10px;
    }
</style>
<script>
    $(document).ready(function () {
        $.getJSON("/Home/GetActiveDestinations", function (data) {
            $.each(data, function (i, item) {
                $('#destination-carousel').append(`
                    <div class="item">
                        <img src="/images/${item.ImageName}" alt="${item.Name}">
                        <h4>${item.Name}</h4>
                        <p>${item.Description}</p>
                        <a href="${item.LinkUrl}" target="_blank" class="btn btn-primary">View Details</a>
                    </div>
                `);
            });

            $('#destination-carousel').owlCarousel({
                items: 1,
                loop: true,
                margin: 10,
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true, // Pause on hover
                nav: true, // Next/Prev arrows
                dots: true, // Manual dots
                navText: [
                    "<i class='fa fa-chevron-left'></i>",
                    "<i class='fa fa-chevron-right'></i>"
                ],
                responsive: {
                    0: { items: 1 },
                    600: { items: 2 },
                    1000: { items: 3 }
                }
            });
        });
    });
</script>
