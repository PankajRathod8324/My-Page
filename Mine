$(document).ready(function () {
    function checkFields() {
        let isValid = true;

        // Check if all fields have values
        $("#waitinglistmodal input, #waitinglistmodal select").each(function () {
            if ($(this).prop("required") && !$(this).val().trim()) {
                isValid = false;
            }
        });

        // Enable or disable the Assign button based on validation
        $(".assignBtn").prop("disabled", !isValid);
    }

    // Trigger validation on input change
    $("#waitinglistmodal input, #waitinglistmodal select").on("input change", function () {
        checkFields();
    });

    // Initial check in case fields are pre-filled
    checkFields();
});
