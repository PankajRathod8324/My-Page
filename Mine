public IPagedList<ProductDTO> GetFilteredProducts(PaginationOptions filterOptions)
    {
        var products = _productRepository.GetAllProducts().AsQueryable();

        if (!string.IsNullOrEmpty(filterOptions.Search))
        {
            string searchLower = filterOptions.Search.ToLower();
            products = products.Where(u => u.Name.ToString().ToLower().Contains(searchLower));
        }
        if (!string.IsNullOrEmpty(filterOptions.FilterBy))
        {
            if (int.TryParse(filterOptions.FilterBy, out int categoryId))
            {
                products = products.Where(p => p.Categoryid == categoryId);
            }
        }

