using iText.Html2pdf;
using System.IO;

private static byte[] GeneratePdfFromHtml(string htmlContent)
{
    using var ms = new MemoryStream();

    var writerProperties = new iText.Kernel.Pdf.WriterProperties();
    using (var writer = new iText.Kernel.Pdf.PdfWriter(ms, writerProperties))
    {
        var pdfDocument = new iText.Kernel.Pdf.PdfDocument(writer);

        // Convert HTML to PDF using HtmlConverter
        HtmlConverter.ConvertToPdf(htmlContent, pdfDocument);
    }

    return ms.ToArray();
}
