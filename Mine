<form id="AddProductForm" enctype="multipart/form-data" method="post">
    @* Toggle Switch *@
    <div class="form-check form-switch mb-3">
        <input class="form-check-input toggleSwitch" type="checkbox" id="IsReturnableSwitch" name="IsReturnable">
        <label for="IsReturnableSwitch" class="form-label ms-2">Is Returnable?</label>
    </div>

    @* Conditional Return Policy Fields *@
    <div id="returnPolicySection" class="mb-3 d-none">
        <div class="mb-2">
            <label class="form-label">Return Policy Name</label>
            <input type="text" class="form-control" name="ReturnPolicyName" />
        </div>

        <div class="mb-2">
            <label class="form-label">Return Policy Description</label>
            <textarea class="form-control" name="ReturnPolicyDescription"></textarea>
        </div>

        <div class="mb-2">
            <label class="form-label">Return Days</label>
            <input type="number" class="form-control" name="ReturnDays" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
<script>
    $(document).ready(function () {
        // Toggle return policy section
        $('#IsReturnableSwitch').on('change', function () {
            if ($(this).is(':checked')) {
                $('#returnPolicySection').removeClass('d-none');
            } else {
                $('#returnPolicySection').addClass('d-none');
            }
        });

        // Submit form via AJAX
        $('#AddProductForm').submit(function (e) {
            e.preventDefault();

            var formData = new FormData(this);

            // For unchecked checkbox (HTML quirk), send explicitly false if not checked
            if (!$('#IsReturnableSwitch').is(':checked')) {
                formData.set("IsReturnable", false);
            }

            $.ajax({
                url: '/Product/Add', // or your Update endpoint
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    toastr.success("Product saved!");
                    // Optional redirect or modal close
                },
                error: function (err) {
                    toastr.error("Error saving product.");
                    console.log(err);
                }
            });
        });
    });
</script>
