public IActionResult MenuOrderApp(int customerId)
{
    var categories = _menuService.GetAllCategories();
    ViewBag.CustomerId = customerId;
    var tables = _accountmanagerorderapp.GetTablesByCustomerId(customerId);

    var customerTables = tables.Select(t => new SectionVM
    {
        SectionName = _tableandsectionService.GetSectionNameByTableId((int)t.TableId),
        Tab = new List<SectionVM>
        {
            new SectionVM
            {
                TableName = _tableandsectionService.GetTableNameByTableId((int)t.TableId)
            }
        }
    }).ToList();

    var categoryvm = new MenuCategoryVM
    {
        CategoryName = categories.FirstOrDefault()?.CategoryName,
        customerTables = customerTables,
        menuCategories = categories
    };

    return View(categoryvm);
}
