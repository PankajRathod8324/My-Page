        }
        .filter-buttons {
            margin-bottom: 20px;
        }
        .filter-buttons button {
            margin: 5px;
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
        .filter-buttons button:hover {
            background-color: #0056b3;
        }
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .gallery img {
            width: 200px;
            height: 150px;
            margin: 10px;
            border-radius: 10px;
            transition: all 0.5s ease;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>

    <!-- Filter Buttons -->
    <div class="filter-buttons">
        <button data-filter="all">All</button>
        <button data-filter="animals">Animals</button>
        <button data-filter="nature">Nature</button>
        <button data-filter="cars">Cars</button>
    </div>

    <!-- Image Gallery -->
    <div class="gallery">
        <img src="https://source.unsplash.com/200x150/?dog" class="animals">
        <img src="https://source.unsplash.com/200x150/?cat" class="animals">
        <img src="https://source.unsplash.com/200x150/?lion" class="animals">
        
        <img src="https://source.unsplash.com/200x150/?forest" class="nature">
        <img src="https://source.unsplash.com/200x150/?mountains" class="nature">
        <img src="https://source.unsplash.com/200x150/?river" class="nature">
        
        <img src="https://source.unsplash.com/200x150/?car" class="cars">
        <img src="https://source.unsplash.com/200x150/?sports-car" class="cars">
        <img src="https://source.unsplash.com/200x150/?luxury-car" class="cars">
    </div>

    <script>
        $(document).ready(function () {
            $(".filter-buttons button").click(function () {
                var filter = $(this).attr("data-filter");

                if (filter === "all") {
                    $(".gallery img").fadeIn(); // Show all images
                } else {
                    $(".gallery img").fadeOut(); // Hide all images
                    setTimeout(function () {
                        $("." + filter).fadeIn(); // Show only selected category
                    }, 300);
                }
            });
        });
    </script>

