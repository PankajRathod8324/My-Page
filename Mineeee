document.addEventListener("DOMContentLoaded", function () {
    const togglePassword = document.getElementsByClassName("togglePassword");
    const passwordField = document.getElementsByClassName("password");
    // const togglePassword2 = document.getElementById("togglePassword2");
    // const passwordField2 = document.getElementById("password2");
    console.log("loginPage.js is loaded successfully!");

    for (var i = 0; i <= togglePassword.length; i++) {

        if (togglePassword[i] && passwordField[i]) {
            togglePassword[i].addEventListener("click", function () {
                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    togglePassword[i].classList.remove("fa-eye-slash");
                    togglePassword[i].classList.add("fa-eye");
                } else {
                    passwordField.type = "password";
                    togglePassword[i].classList.remove("fa-eye");
                    togglePassword[i].classList.add("fa-eye-slash");
                }
            });
        } else {
            console.error("Toggle password elements not found!");
        }
    }
