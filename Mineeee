function performAction(url, requestData) {
                console.log(requestData);
                $.ajax({
                    url: '/TaxAndFee/AddTax', // Same URL for both permission check and action
                    type: "POST", // Use POST if you're modifying data
                    contentType: "application/json",
                    data: requestData,
                    success: function (response) {
                        if (response.status === "forbidden") {
                            // ❌ User lacks permission, show toast
                            $("#newtaxModal").modal("show");
                            toastr.error('You do not have Permission', "UnAuthorise");
                        } else if (response.status === "success") {
                            // ✅ Action was successful
                            alert("Tax Added Successfully!");
                            // Example: Open modal
                        } else {
                            // ⚠️ Some other unexpected response
                            toastr.error('You do not have Permission', "UnAuthorise");
                        }
                    },
                    error: function () {
                         toastr.error('You do not have Permission', "UnAuthorise");
                    }
                });
            }
            $(".addBtn").click(function (e) {
                e.preventDefault();

                console.log("Submitting AddTax form");

                // Serialize form fields
                var formData = $("#AddTax").serializeArray();
                var formDataobj = {};

                // Convert serialized array into an object
                $.each(formData, function (index, field) {
                    formDataobj[field.name] = field.value;
                });

                formDataobj["IsEnabled"] = $("#toggleSwitch[name='IsEnabled']").prop("checked");
                formDataobj["IsDefault"] = $("#toggleSwitch[name='IsDefault']").prop("checked");

                var submissionData = JSON.stringify(formDataobj); // Final JSON string

                console.log("Sending data:", submissionData);

                performAction("/TaxAndFee/AddTax", submissionData);
            });
        });
